{
  "name": "robot-control-server",
  "version": "1.0.0",
  "description": "Сервер для управления роботом",
  "main": "src/index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prod": "pm2 start src/index.js --name robot-control",
    "generate-ssl": "chmod +x scripts/generate-ssl.sh && ./scripts/generate-ssl.sh",
    "setup": "npm install && npm run generate-ssl"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pm2": "^5.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
} 